@using BookMVC.ViewModels
@model List<BookReadDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>Welcome to the Book Store</h1>
        <p>Explore a wide collection of our books. Feel free to add new ones or update existing entries.</p>
        <a href="@Url.Action("Create", "Home")" class="btn btn-primary">Add New Book</a>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped shadow">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Price.ToString("C")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(book.ImageUrl))
                                {
                                    <img src="@book.ImageUrl" alt="Book Image" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <span class="text-secondary">No Image</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Update", "Home", new { id = book.Id })" class="btn btn-outline-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Delete", "Home", new { id = book.Id })" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}
